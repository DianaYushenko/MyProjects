#include <iostream>
#include <windows.h>
#include <string>
#include <ctime>
using namespace std;

void main()
{
	int width = 40;
	int height = 10;


	for (int y = 0; y < height; y++)
	{

	
		for (int x = 0; x < width; x++)
		{
			cout << "*";
			
		}
		cout << endl;
	

	}
	cout << endl<<endl;

	for (int y = 0; y < height; y++)
	{

		
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1)
				cout << "*";
			else
				cout << " ";
			
		}
		cout << endl;
		

	}


	Sleep(INFINITE);
	cout << "\n\n\n";
}
