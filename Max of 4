#include <iostream>
using namespace std;
void main()
{
	setlocale(0, "Ukrainian");
	float a, b, c, d;
	cout << "Введіть чотири числа \n";
	cin >> a;
	cin >> b;
	cin >> c;
	cin >> d;
	a > b&& a > c&& a > d ? cout << "Перше число найбільше\n" : cout << "\n";
	b > a&& b > c&& b > d ? cout << "Друге число найбільше\n" : cout << "\n";
	c > a&& c > b&& c > d ? cout << "Третє число найбільше\n" : cout << "\n";
	d > a&& d > b&& d > c ? cout << "Четверте число найбільше\n" : cout << "\n";
}
