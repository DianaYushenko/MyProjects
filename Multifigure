#include <iostream>
#include <windows.h>
#include <string>
#include <ctime>
using namespace std;

int main()
{
	setlocale(0, "Ukrainian");
	system("color 0F");
	int width;
	
	cout << "Введіть довжину (непарне число): \n";
	cin >> width;
	int height = width;
	for (int y = 0; y < height; y++)
	{

		
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1
				|| x + y == width - 1)
				cout << "*";
			else
				cout << " ";
			
		}
		cout << endl;
		

	}
	cout << endl << endl;
	
	for (int y = 0; y < height; y++)
	{

		
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1 || x == y)
				cout << "*";
			else
				cout << " ";
			
		}
		cout << endl;
		

	}
	cout << endl << endl;

	
	for (int y = 0; y < height; y++)
	{

		
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1 || x == width/2)
				cout << "*";
			else
				cout << " ";
			
		}
		cout << endl;
		

	}
	cout << endl << endl;

	
	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1 || y == height/2)
				cout << "*";
			else
				cout << " ";
			
		}
		cout << endl;
		

	}
	cout << endl << endl;

	
	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0 && x <=width/2 || x == 0 && y <= height/2 || x == y || y == height - 1 && x>=width/2 
				||x==width-1 && y>=height/2)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;

	}
	cout << endl << endl;

	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0 && x >= width / 2 || x == 0 && y >= height / 2 || x + y == width - 1 || y == height - 1 && x <= width / 2
				|| x == width - 1 && y <= height / 2)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
		

	}
	cout << endl << endl;

     for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0
				|| y == height - 1
				|| x + y == width - 1 || x == y)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
	
	}
	cout << endl << endl;

	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (x == 0 || x == width - 1
				|| x + y == width - 1 || x==y)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
		
	}
	cout << endl << endl;

	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1
				|| x + y == width - 1 || x==y)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
		
	}
	cout << endl << endl;

	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0 || x == 0 || x == width - 1
				|| y == height - 1 || x == width / 2 || y==height/2)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
		
	}
	cout << endl << endl;

	for (int y = 0; y < height; y++)
	{
		for (int x = 0; x < width; x++)
		{
			if (y == 0 && x > 0 && x < width/2  || x == width - 1 && y > height/2 && y<height-1
				|| y == height - 1 && x > width / 2 && x < width - 1 ||
				x == width / 2 && y > 0 && y!= height/2 && y<height-1||
				y == height / 2 && x > 0 && x != width/2 && x<width-1||
				x==0 && y>0 && y< height/2)
				cout << "*";
			else
				cout << " ";
			
		}
		cout << endl;
		
	}
	cout << endl << endl;

	for (int y = 0; y < height; y++)
	{

		for (int x = 0; x < width; x++)
		{
			if (y == 0 && x > width / 2 && x < width - 1 || x == width - 1 && y < height / 2 && y>0
				|| y == height - 1 && x > 0 && x < width / 2 ||
				x == width / 2 && y > 0 && y != height / 2 && y < height - 1 ||
				y == height / 2 && x > 0 && x != width / 2 && x < width - 1 ||
				x == 0 && y<height-1 && y > height / 2)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
		
	}
	cout << endl << endl;


	Sleep(INFINITE);
	cout << "\n\n\n";
}
