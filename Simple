#include<iostream>
using namespace std;
int main() {
	setlocale(0, "Ukrainian");
	int number;
	cout << "Введіть число, аби перевірити, чи воно просте: ";
	cin >> number;
	bool simple = true;
	for (int i = 2; i < number; i++) {
		if (number % i == 0) {
			simple = false;
			break;
		}
		}
	if (simple == true)
		cout << "Число просте\n";
	else
		cout << "Число не просте\n";
	
}
